generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  password         String
  profilePicture   String?
  banner           String?
  userName         String
  messagesSent     Message[] @relation("MessagesSent")
  MessagesReceived Message[] @relation("MessagesReceived")
}

model Message {
  id         Int      @id @default(autoincrement())
  content    String
  createdAt  DateTime @default(now())
  fromUserId Int?
  toUserId   Int?
  fromUser   User?    @relation("MessagesSent", fields: [fromUserId], references: [id], onDelete: SetNull)
  toUser     User?    @relation("MessagesReceived", fields: [toUserId], references: [id], onDelete: SetNull)
}
